<?xml version="1.0" encoding="UTF-8"?>

<faces-config>
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    <application>
        <resource-bundle>
            <base-name>i18n/messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>i18n/labels</base-name>
            <var>labels</var>
        </resource-bundle>
        <locale-config>
            <default-locale>de</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>

    <navigation-rules>
        <navigation-rule>
            <description>Zum Login</description>
            <from-view-id>*</from-view-id>
                <navigation-case>
                    <from-outcome>toLogin</from-outcome>
                    <to-view-id>SmartMensa/login.jsf</to-view-id>
                </navigation-case>
        </navigation-rule>
        <navigation-rule>
            <description>Zur Overview</description>
            <from-view-id>*</from-view-id>
            <navigation-case>
                <from-outcome>toOverview</from-outcome>
                <to-view-id>SmartMensa/overview.jsf</to-view-id>
            </navigation-case>
        </navigation-rule>
    </navigation-rules>
</faces-config> 
